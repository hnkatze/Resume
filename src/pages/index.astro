    }

    contactElement.textContent = currentContact.substring(0, contactcurrentLetter);

    if (!contactdeleting && contactcurrentLetter === currentContact.length) {
        // Si el texto está completo, espera un poco antes de empezar a borrar
        setTimeout(() => { contactdeleting = true; }, 1000);
    } else if (contactdeleting && contactcurrentLetter === 0) {
        contactdeleting = false;
        contactcurrent = (contactcurrent + 1) % contact.length;
    }

