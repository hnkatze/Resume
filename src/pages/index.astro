<script>
const languages = ["JavaScript", "TypeScript", "Java", "Dart", "C++", "React", "NextJs", "Astro","Electron", "Flutter"];
let current = 0;
let currentLetter = 0;
let deleting = false;

function updateLanguage() {
    const languageElement = document.getElementById('language');
    let currentLanguage = languages[current];

    if (deleting) {
        // Borrar letra por letra
        currentLetter--;
    } else {
        // Escribir letra por letra
        currentLetter++;
    }

    languageElement.textContent = currentLanguage.substring(0, currentLetter);

    if (!deleting && currentLetter === currentLanguage.length) {
        // Si el texto está completo, espera un poco antes de empezar a borrar
        setTimeout(() => { deleting = true; }, 1000);
    } else if (deleting && currentLetter === 0) {
        deleting = false;
        current = (current + 1) % languages.length;
    }

    setTimeout(updateLanguage, 100); // Velocidad de borrado y escritura
}

const contact = ["Phone: +504 97840276","Mail: henriquezhector1@homtail.com", "Linkedin: @hnkatze", "Github: @hnkatze"];
let contactcurrent = 0;
let contactcurrentLetter = 0;
let contactdeleting = false;

